<div class="container d-flex justify-content-center text-center" style=" align-items: flex-start; padding-top: 20px;">
  <div>
    <h1>Welcome to Bounty Board</h1>
    <p>The best place to get all of the tasks you don't want to do done for you!</p>
  </div>
</div>
<div class="container mt-5">
  <h1 class="text-center mb-4">Bounty Dashboard</h1>
  <a class="btn btn-primary" href="/activeBounties">Your Bounties</a>

  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">Job Title</th>
          <th scope="col">Job Description</th>
          <th scope="col">Job Price</th>
          <th scope="col">Poster</th>
          <th scope="col">Take Bounty</th>
        </tr>
      </thead>
      <tbody>
        {{#each Bounty}}
        <tr>
          <td>{{title}}</td>
          <td>{{job_description}}</td>
          <td>{{price}}</td>
          <td>{{poster}}</td>
          <td>
            <form method="POST" action="/home" class="d-inline">
              <input type="hidden" name="BountyID" value="{{job}}">

              <button type="submit" class="btn btn-outline-success btn-sm" {{#if is_taken}}disabled{{/if}}>
                {{#if is_taken}}Taken{{else}}Take Bounty{{/if}}
              </button>
            </form>


          </td>
        </tr>
        {{/each}}
      </tbody>

    </table>
  </div>

  {{#if Bounty.length}}
  <p class="text-muted text-end mt-3">Total Bounties: {{Bounty.length}}</p>
  {{else}}
  <p class="text-center text-muted mt-4">No bounties found. Come back later or add a bounty now!</p>
  {{/if}}
</div>


