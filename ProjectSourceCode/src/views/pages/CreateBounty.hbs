<form method="POST" action="/CreateBounty">
    <div class="mb-3">
        <label for="name" class="form-label">Title of job</label>
        <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="mb-3">
        <label for="desc" class="form-label">Description of job</label>
        <textarea class="form-control" id="desc" name="job_description" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="numberInput">Enter a value</label>
        <div class="input-group">

            <input type="number" class="form-control text-center" name="price" id="price" value="0" min="0" max="100" step="1">

        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>