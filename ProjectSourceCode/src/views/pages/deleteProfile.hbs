{{> message}}


<h2 class = "text-center">Delete Account</h2>
<div class = "d-flex justify-content-center">
    {{!-- this form takes input with id's username and password --}}
    <form method="POST" action="/deleteProfile">
        <div class = "form-group">
        <label for="password">Password:</label>
        <input class="form-control" name="password" id = "password" placeholder="password.." required />
        </div>
        <div class = "form-group">
        <label for="password">Retype password:</label>
        <input class="form-control" name="password2" id = "password2" placeholder="password.." required />
        </div>
        <div class = "form-group">
        <button type="submit" class="btn btn-primary">DELETE ACCOUNT</button>
        </div>
        {{!-- link to register if not logged in --}}
        <p>If you do not want to delete your account click here</p>
        <p>Click <a href="/home">here</a> to go back</p>
    </form>
</div>